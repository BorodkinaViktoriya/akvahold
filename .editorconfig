root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
# В markdown обычно не обрезаем хвостовые пробелы (они могут значить перенос строки)
trim_trailing_whitespace = false

[*.yml]
[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
[*.jsx]
[*.ts]
[*.tsx]
[*.css]
[*.scss]
[*.html]
[*.vue]
indent_size = 2
